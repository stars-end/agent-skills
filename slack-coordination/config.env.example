# config.env.example
# Copy to .config.env and fill in values

# Slack User OAuth Token (xoxp-...) from "OAuth & Permissions"
# Must have scopes: channels:history, channels:read, chat:write, users:read
SLACK_MCP_XOXP_TOKEN="xoxp-YOUR-TOKEN-HERE"

# Default channel for agent coordination (project specific or shared)
SLACK_CHANNEL="C09MQGMFKDE"

# Slack User ID to tag for approvals (YOU)
# Find this in your Slack profile -> Copy Member ID
HUMAN_SLACK_ID="U01234567"

# Timeout for human approval in seconds (default 300 = 5 min)
SLACK_APPROVAL_TIMEOUT=300

# Max tasks to process in one session loop
MAX_TASKS_PER_SESSION=3
